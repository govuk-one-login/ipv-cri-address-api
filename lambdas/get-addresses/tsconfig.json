{
    "compilerOptions": {
        "target": "es2020",
        "strict": true,
        "preserveConstEnums": true,
        // "noEmit": true, // emit for debugger testing purposes.
        "sourceMap": true,
        "module": "es2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["jest", "node", "aws-lambda"],
        "outDir": "./build/"
    },
    "exclude": ["node_modules"],
    "include": ["./src/", "./tests/"]
}